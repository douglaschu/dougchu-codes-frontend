---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
     <head>
          <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
     </head>
     <body>
          <Header />
          <main>
               <h1>Hello</h1>
               <p>
                    Hi, I'm Doug Chu, and I'm a full stack developer based in
                    Grand Rapids, Michigan. Behold, these are my musings (i.e.
                    my coding blog) and my works (i.e. my portfolio.) Peruse at
                    your own peril!
               </p>
          </main>
          <Footer />
     </body>
</html>
